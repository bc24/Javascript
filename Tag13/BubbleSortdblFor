<script>
var arr =[];
for (let i=0; i<21; i++){
	let temp=Number((Math.random()*101).toFixed(0));
	arr.push(temp);
}
console.log(arr);

function BSort(array){
	for (let i=array.length-1;i>=0 ; i--){	
		for (let i=0; i<array.length; i++){
			if(array[i]>array[i+1]){
				let puffer=array[i];
				array[i]=array[i+1];
				array[i+1]=puffer;
			}
		}
	}	
return array;
}

console.log("sortiert!:");
console.log(BSort(arr));


</script>

